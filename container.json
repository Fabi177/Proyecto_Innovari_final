{
  "family": "innovari-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::009661763899:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "innovari-app",
      "image": "009661763899.dkr.ecr.us-east-1.amazonaws.com/innovari:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ],
      "command": ["php","artisan","serve","--host=0.0.0.0","--port=80"],
      "environment": [
        {"name": "APP_ENV","value": "production"},
        {"name": "DB_USERNAME","value": "admin"}
      ]
    }
  ]
}
